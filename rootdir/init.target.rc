    # h2k permission
    chmod 0644 /efs/redata.bin

    # WiFi
    mkdir /efs/wifi 0775 system system
    chown system system /efs/wifi/.mac.info
    chmod 0664 /efs/wifi/.mac.info

    # For TRP/TIS
    write /data/.psm.info 1
